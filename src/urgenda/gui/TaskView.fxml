               <BorderPane.margin>
                  <Insets left="5.0" right="5.0" />
               </BorderPane.margin></Label>
         </center>
         <left>
            <ImageView fx:id="importantIndicator" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_LEFT">
